<Window Name="AddCategryWindow" x:Class="WpfForM_CRM.Pages.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForM_CRM.Pages"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddCategory" Height="300" Width="300">
    <Grid>
        <Border Width="290" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="7" Background="AliceBlue">
            <StackPanel >
                <TextBox Name="CategoryName" Width="280" Margin="10" md:HintAssist.Hint=" Название категория" md:HintAssist.HintOpacity="0.4" />
                <Button x:Name="AddCategoryButton" Width="150" Margin="5" Background="#FF4282D8" Content="Добавить категория" Click="AddCategoryButton_OnClick" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
