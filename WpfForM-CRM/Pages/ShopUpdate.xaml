<Window  x:Class="WpfForM_CRM.Pages.ShopUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForM_CRM.Pages"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ShopUpdate" Height="300" Width="400" 
        WindowStartupLocation="CenterScreen" KeyDown="ShopUpdate_OnKeyDown">

    <Grid Margin="5,2,0,2" >
        <TextBox x:Name="shopname" FontSize="20" md:HintAssist.Hint=" Название магазина" md:HintAssist.HintOpacity="0.4" Height="35" Margin="4,40,4,20" />
        <Button Height="30" Background="#FF4282D8" Margin="122,200,103,50" Click="Button_Click" FontFamily="Arial" FontSize="18" Content="Редактирование"/>
    </Grid>
</Window>