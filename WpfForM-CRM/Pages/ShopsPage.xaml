<Page x:Class="WpfForM_CRM.Pages.ShopsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfForM_CRM.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShopsPage" Background="White">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151"></ColumnDefinition>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="324*"/>
        </Grid.ColumnDefinitions>

        <Border Background= "White" >
            <StackPanel Margin="0,0,-2,0">
                <Button Height="50" Background="White" Foreground="Black"  Content="Добавить магазин" Click="Button_AddShop"/>
                <Button Height="50" Background="White" Foreground="Black" Content="Магазины" Click="Button_ReadShops" BorderBrush="White"/>
            </StackPanel>
        </Border>

        <ItemsControl x:Name="shopsFrame" Background="#FF4282D8" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="3" Margin="1,-2,0,0" Grid.Column="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <Image x:Name="poisk" HorizontalAlignment="Left" Height="14" Margin="122,1,0,0" VerticalAlignment="Top" Width="22" Source="pack://application:,,,/Pages/poisk.png" Grid.Column="2" RenderTransformOrigin="0.5,0.5" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="104.451"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <TextBox x:Name="SearchText" Grid.Column="2" TextWrapping="Wrap" Height="20" Width="320" VerticalAlignment="Top" Background="FloralWhite" Margin="146,-2,165,0" TextChanged="search_txt_TextChanged" Grid.ColumnSpan="2" />
    </Grid>

</Page>
