<Page x:Name="ShopPage" x:Class="WpfForM_CRM.Pages.ShopsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfForM_CRM.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShopsPage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" Grid.ColumnSpan="2" Margin="0,0,645,0">
            <StackPanel Margin="0,0,-2,0">
                <Button Height="50" Background="White" Foreground="Black" Content="Добавить магазин" Click="Button_AddShop" Width="153"/>
                <Button Height="50" Background="White" Foreground="Black" Content="Магазины" Click="Button_ReadShops" BorderBrush="White" Width="152"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="shopsFrame" Background="CadetBlue" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="51,73,50,50" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <Image x:Name="poisk" HorizontalAlignment="Left" Height="14" Margin="138,1,0,0" VerticalAlignment="Top" Width="22" Source="pack://application:,,,/Pages/poisk.png" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="104.451"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Button x:Name="AddButton" Margin="516,8,24,410" Content="Add category" FontSize="10" Click="AddCategoryButton" Cursor="Hand" Visibility="Visible" Grid.Column="1"/>
        <TextBox x:Name="SearchText" md:HintAssist.Hint="  Search" md:HintAssist.HintOpacity="0.3" md:TextFieldAssist.TextFieldCornerRadius="7" FontSize="12" Padding=".1" Grid.Column="2" TextWrapping="Wrap" Height="19" Width="320" VerticalAlignment="Top" Background="FloralWhite" Margin="146,-2,165,0" TextChanged="search_txt_TextChanged" Grid.ColumnSpan="2" />
    </Grid>


</Page>
