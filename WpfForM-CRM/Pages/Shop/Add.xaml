<Window x:Class="WpfForM_CRM.Pages.Shop.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForM_CRM.Pages.Shop"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" KeyDown="CreateShopWithEnterButton"
        Title="Добавить магазин" VerticalAlignment="Center" Height="300" Width="400">

    <Grid Margin="5,2,0,2" >

        <Label Name="EmptyName" FontWeight="Heavy" Content="" Foreground="Firebrick" Margin="19,155,136,92" RenderTransformOrigin="0.488,0.758"/>
        <TextBox x:Name="shopname" md:HintAssist.Hint="Название магазина" md:HintAssist.IsFloating="True"  md:HintAssist.Foreground="MediumBlue" md:HintAssist.HintOpacity="0.4" FontSize="20"  Width="390" Margin="5,84,0,108" PreviewTextInput="shopNamePreviewTextInput" />
        <Button Height="30" Width="150" Background="#FF4282D8" Margin="10 100 0 0" Click="Button_Click"  FontFamily="Arial" FontSize="18">Добавить</Button>

    </Grid>
</Window>
