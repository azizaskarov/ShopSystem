<UserControl x:Name="ShopControlPage" x:Class="WpfForM_CRM.Pages.ShopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfForM_CRM.Pages" 
             mc:Ignorable="d" Width="200" Margin="20" Height="40" MouseLeftButtonDown="ShopControl_OnMouseLeftButtonDown">

    <Grid  Background="LightSkyBlue" Margin="0,0,-21,-19" RenderTransformOrigin="0,1.5" >
        <Image Name="DeleteImageIcon" VerticalAlignment="Top" Height="20" Source="../IconImages/del.png"  Margin="190,6,-11,0" Cursor="Hand"  MouseLeftButtonDown="DeleteImageIcon_OnMouseLeftButtonDown"/>
        <Image Name="UpdateImageIcon" VerticalAlignment="Top" Height="18" Source="../IconImages/update.png" Margin="190,40,-9,0" Cursor="Hand"   MouseLeftButtonDown="UpdateImageIcon_OnMouseLeftButtonDown"/>
        <Label Name="shopName" FontWeight="DemiBold" Background="LightSkyBlue"  FontSize="16"  HorizontalAlignment="Left" Cursor="Hand"   BorderBrush="LightSkyBlue" VerticalContentAlignment="Top" Margin="21,12,0,15" Width="161" />
    </Grid>



</UserControl>
