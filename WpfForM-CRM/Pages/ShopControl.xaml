             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfForM_CRM.Pages"
             mc:Ignorable="d" d:DesignWidth="200" Margin="20" Height="40" >

    <Grid Name="Grid" Background="LightSkyBlue"  Margin="0,0,-21,-19" RenderTransformOrigin="0,1.5" >

        <Image Name="DeleteImageIcon" VerticalAlignment="Top" Height="21" Source="../IconImages/del.png" Cursor="Hand" Margin="163,38,16,0"   MouseLeftButtonDown="DeleteImageIcon_OnMouseLeftButtonDown"/>
