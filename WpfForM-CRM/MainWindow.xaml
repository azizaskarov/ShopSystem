<Window x:Class="WpfForM_CRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForM_CRM"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        x:Name="Window"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" KeyDown="MainWindow_OnKeyDown"  WindowStyle="None" MaxWidth="800" MaxHeight="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="365*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="387*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightSkyBlue" Height="25" Width="800" MouseDown="DockPanel_MouseDown" Grid.Column="1" Grid.ColumnSpan="3">
            <Label Content="" Width="14" FontSize="14" FontFamily="Times New Roman" FontWeight="Bold"/>

            <Button x:Name="exit_btn" Height="30" Background="LightSkyBlue"  FontSize="12" Click="Page1_Click" HorizontalAlignment="Right" Content="X" FontWeight="Bold" Width="40" Cursor="Hand" MouseEnter="exit_btn_MouseEnter" MouseLeave="exit_btn_MouseLeave" />
        </DockPanel>
        <Frame x:Name="mainframe" Margin="-8,25,0,0" NavigationUIVisibility="Hidden" Height="500" VerticalAlignment="Top" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
